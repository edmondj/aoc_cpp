{
    "version": 10,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "AOC_2025": "ON"
            }
        },
        {
            "name": "debug",
            "inherits": "base",
            "binaryDir": "out/debug"
        },
        {
            "name": "release",
            "inherits": "base",
            "binaryDir": "out/release"
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "configuration": "Debug"
        },
        {
            "name": "release",
            "configurePreset": "release",
            "configuration": "Release"
        },
        {
            "name": "release_with_debug_info",
            "configurePreset": "release",
            "configuration": "RelWithDebInfo"
        }
    ],
    "workflowPresets": [
        {
            "name": "debug",
            "steps": [
                {
                    "type": "configure",
                    "name": "debug"
                },
                {
                    "type": "build",
                    "name": "debug"
                }
            ]
        },
        {
            "name": "release",
            "steps": [
                {
                    "type": "configure",
                    "name": "release"
                },
                {
                    "type": "build",
                    "name": "release"
                }
            ]
        },
        {
            "name": "release_with_debug_info",
            "steps": [
                {
                    "type": "configure",
                    "name": "release"
                },
                {
                    "type": "build",
                    "name": "release_with_debug_info"
                }
            ]
        }
    ]
}
    "configurePresets": [
        {
            "name": "default",
            "binaryDir": "out"
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "default",
            "configuration": "Debug"
        },
        {
            "name": "release",
            "configurePreset": "default",
            "configuration": "Release"
        },
        {
            "name": "release_with_debug_info",
            "configurePreset": "default",
            "configuration": "RelWithDebInfo"
        }
